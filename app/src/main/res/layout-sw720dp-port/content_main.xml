<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_launches"
        android:layout_width="@dimen/launch_rv_width"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_gravity="center"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/view_network_conn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_network_conn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="bottom|center"
            android:padding="@dimen/network_conn_padding"
            android:text="@string/network_conn"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_network_conn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_network_conn"
            android:layout_centerHorizontal="true"
            android:text="@string/try_again"
            android:textSize="24sp" />

    </RelativeLayout>

</LinearLayout>